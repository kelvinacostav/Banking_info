<ScrollPane prefHeight="600.0" prefWidth="380.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="forgotpass.ForgotPasswordController">
   <content>
      <AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="400.0">
         <children>
            <Label layoutX="107.0" layoutY="53.0" prefHeight="32.0" prefWidth="236.0" text="Forgot Password">
               <font>
                  <Font name="Bell MT Bold" size="24.0" />
               </font>
            </Label>
            <Label layoutX="137.0" layoutY="85.0" text="Recover your passwor here" />
            <TextField fx:id="accountno" layoutX="85.0" layoutY="130.0" prefHeight="26.0" prefWidth="231.0" promptText="Your Account No" styleClass="field-decoration" stylesheets="@../Design/design.css" />
            <TextField fx:id="ans" layoutX="87.0" layoutY="218.0" prefHeight="26.0" prefWidth="227.0" promptText="Answer" styleClass="field-decoration" stylesheets="@../Design/design.css" />
            <ComboBox fx:id="sq" layoutX="85.0" layoutY="173.0" prefHeight="29.0" prefWidth="231.0" promptText="Security Question" />
            <Button layoutX="149.0" layoutY="258.0" mnemonicParsing="false" onMouseClicked="#recoverPassword" styleClass="login-button" stylesheets="@../Design/design.css" text="Recover Password" />
            <FontAwesomeIconView glyphName="ARROW_LEFT" layoutX="8.0" layoutY="25.0" onMouseClicked="#backToLogin" />
            <FontAwesomeIconView glyphName="CLOSE" layoutX="424.0" layoutY="25.0" onMouseClicked="#closeApp" />
         </children>
      </AnchorPane>
   </content>
</ScrollPane>
